{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "DailyTask",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer"
        },
        "taskName": {
            "type": "string"
        },
        "taskDes": {
            "type": "string"
        },
        "lastRecord": {
            "oneOf": [
                { "$ref": "CompletionRecord.json" },
                { "type": "null" }
            ]
        }
    },
    "required": [
        "id",
        "taskDes",
        "taskName",
        "lastRecord"
    ]
}
